<% provide(:title, @user.name) %>
<div>
  <table class="table table-bordered table-condensed user-table">
    <tr>
      <td>
        <%= link_to "⇦ 前月へ", user_path(date: @first_day.prev_month), class: "btn btn-primary" %>
        【<%= l(@first_day, format: :middle) %>】勤怠管理表
        <%= link_to "次月へ ⇨", user_path(date: @first_day.next_month), class: "btn btn-primary" %>
      </td>
      <td>
        指定勤務開始時間：9:00<br/>
        指定勤務終了時間：18:00
      </td>

      <td colspan="3" style="text-align: center; vertical-align: middle;">
          基本時間：<%= format_basic_info(@user.basic_time) %>
      </td>
      <td style="text-align: center; vertical-align: middle;">
        初日：<%= l(@first_day, format: :short) %>
      </td>
    </tr>

    <tr>
      <td>所属：<%= @user.department.present? ? @user.department : "未所属" %></td>
      <td>氏名：<%= @user.name %></td>
      <td>コード</td>
      <td><%= @user.id %></td>
      <td>出勤日数：<%= @worked_sum %>日</td>
      <td>締め：<%= l(@last_day, format: :short) %></td>
    </tr>
  </table>
</div>
<div class="btn-users-show">
  <%= link_to "勤怠を編集",attendances_edit_one_month_user_path(date: @first_day),class: "btn btn-primary" %> &nbsp;
  <%= link_to "CSV出力",user_path(format: 'csv'),class: "btn btn-primary" %>
  <%= link_to "勤怠修正ログ",attendances_edit_one_month_user_path(@user, @attendance),class: "btn btn-primary" %>
</div>
<div>
  <table class="table table-bordered table-condensed table-hover" id="table-attendances">
    <thead>
      <tr>
        <th rowspan="3">残業申請</th>
        <th rowspan="3">日付</th>
        <th rowspan="3">曜日</th>
        <th rowspan="3">出勤・退社登録</th>
        <th colspan="6">実績</th> 
        <th colspan="5">所定外勤務</th>
      </tr>

      <tr>
        <th colspan="2">出社</th>
        <th colspan="2">退社</th>
        <th rowspan="2">在社時間</th>
        <th rowspan="2">備考</th>
        <th colspan="2">終了予定時間</th>
        <th rowspan="2">時間外時間</th> 
        <th rowspan="2">業務処理内容</th> 
        <th rowspan="2">指示者確認㊞</th>
      </tr>
        
      <tr>
        <th>時</th>
        <th>分</th>
        <th>時</th>
        <th>分</th>
        <th>時</th>
        <th>分</th>
      </tr>
    </thead>
    
    <tbody>
      <% @attendances.each do |day| %>
        <tr>
          <td>
            <a href="#" class="btn btn-primary" data-toggle="modal" data-target="#overtimeModal" data-date="<%= l(day.worked_on, format: :short) %>">残業申請</a>
          </td> 
          <td><%= l(day.worked_on, format: :short) %></td>
          <td class="<%= weekday_classes(day.worked_on.wday) %>"><%= $days_of_the_week[day.worked_on.wday] %></td>
          <td>
            <% if btn_text = attendance_state(day) %>
              <%= link_to "#{btn_text}登録", user_attendance_path(@user, day), method: :patch, class: "btn btn-primary btn-attendance" %>
            <% end %>
          </td>
          <td><%= day.started_at&.hour %></td>
          <td><%= day.started_at&.min %></td>
          <td><%= day.finished_at&.hour %></td>
          <td><%= day.finished_at&.min %></td>
          <td>
            <% if day.started_at.present? && day.finished_at.present? %>
              <%= str_times = working_times(day.started_at, day.finished_at) %>
              <% @total_working_times = @total_working_times.to_f + str_times.to_f %>
            <% end %>
          </td>
          <td><%= day.note %></td> <!-- 備考 -->
          <td></td> <!-- 終了予定時間 (時) -->
          <td></td> <!-- 終了予定時間 (分) -->
          <td></td> <!-- 時間外時間 -->
          <td></td> <!-- 業務処理内容 -->
          <td></td> <!-- 指示者確認印 -->
        </tr>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <td colspan="3">累計日数</td>
        <td colspan="6">総合勤務時間</td>
        <td colspan="4">累計在社時間</td>
        <td rowspan="2" colspan="2">所属長承認:<br/>
          <select name="superior">
            <option>上長A</option>
            <option>上長B</option>
          </select>
          <button class="btn btn-primary">申請</button>
        </td>
      </tr>
      <tr>
        <td colspan="3"><%= @attendances.count %></td>
        <td colspan="6"><%= format_basic_info(@user.work_time).to_f * @worked_sum %></td>
        <td colspan="4"><%= @total_working_hours %></td>
      </tr>
    </tfoot>
  </table>
</div>
<!-- Modal -->
<div class="modal fade" id="overtimeModal" tabindex="-1" aria-labelledby="overtimeModalLabel" aria-hidden="true">
  <div class="modal-dialog" style="max-width: 90%; width: 70%; max-height: 80%; height: 70%;">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title text-center" id="overtimeModalLabel">【残業申請】</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
       <table class="table table-bordered table-condensed table-hover" id="table-attendances">
          <thead>
            <tr>
              <th>日付</th>
              <th>曜日</th>
              <th>終了予定時間</th>
              <th>翌日</th>
              <th>業務処理内容</th>
              <th>指示者確認㊞</th>
            </tr>
          </thead>
          
          <tbody>
            <tr>
              <td><a href="#" class="btn btn-primary" data-toggle="modal" data-target="#overtimeModal" data-date="2023-07-01">残業申請</a></td>
              <td id="modal_day_of_week"></td>
              <td><input type="time" id="end_time" name="end_time" class="rounded-input"></td>
              <td><input type="checkbox" id="next_day" name="next_day"></td>
              <td><textarea class="rounded-input"></textarea></td>
              <td>
                <select name="supervisor" id="supervisor" class="form-control">
                  <option value="supervisor1"></option>
                  <option value="supervisor2">上長A</option>
                  <option value="supervisor3">上長B</option>
                </select>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary">変更を送信する</button>
      </div>
    </div>
  </div>
</div>

<script>
  var daysOfTheWeek = ['月', '火', '水', '木', '金', '土', '日'];

  document.querySelectorAll('a[data-toggle="modal"][data-target="#overtimeModal"]').forEach(function(button) {
  button.addEventListener('click', function() {
    var dateStr = this.getAttribute('data-date');
    document.querySelector('#overtimeModal tbody tr td:first-child').innerText = dateStr;

    var dateObj = new Date(dateStr);
    var dayOfWeek = (dateObj.getUTCDay() + 6) % 7;  // 曜日を取得し、ひとつずらす

    document.querySelector('#modal_day_of_week').innerText = daysOfTheWeek[dayOfWeek];
  });
});
</script>