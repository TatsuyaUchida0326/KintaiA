<% provide(:title, @user.name) %>
<div>
  <table class="table table-bordered table-condensed user-table">
    <tr>
      <td>
        <%= link_to "⇦ 前月へ", user_path(date: @first_day.prev_month), class: "btn btn-primary" %>
        【<%= l(@first_day, format: :middle) %>】勤怠管理表
        <%= link_to "次月へ ⇨", user_path(date: @first_day.next_month), class: "btn btn-primary" %>
      </td>
      <td>
        指定勤務開始時間：9:00<br/>
        指定勤務終了時間：18:00
      </td>

      <td colspan="3" style="text-align: center; vertical-align: middle;">
          基本時間：<%= format_basic_info(@user.basic_time) %>
      </td>
      <td style="text-align: center; vertical-align: middle;">
        初日：<%= l(@first_day, format: :short) %>
      </td>
    </tr>

    <tr>
      <td>所属：<%= @user.department.present? ? @user.department : "未所属" %></td>
      <td>氏名：<%= @user.name %></td>
      <td>コード</td>
      <td><%= @user.id %></td>
      <td>出勤日数：<%= @worked_sum %>日</td>
      <td>締め：<%= l(@last_day, format: :short) %></td>
    </tr>
  </table>
</div>
<% if logged_in? && current_user.superior? %>
  <div class="notification">
    <h4><a href="#" class="notification-link">【所属長承認申請のお知らせ】</a></h4>
  </div>

  <div class="notification">
    <h4><a href="#" class="notification-link">【勤怠変更申請のお知らせ】</a></h4>
  </div>

  <div class="notification">
    <h4><a href="#" class="notification-link">【残業申請のお知らせ】</a></h4>
  </div>
<% end %>
<div class="btn-users-show">
  <%= link_to "勤怠を編集",attendances_edit_one_month_user_path(date: @first_day),class: "btn btn-primary" %> &nbsp;
  <%= link_to "CSV出力", export_csv_users_path, class: "btn btn-primary" %>
  <%= link_to "勤怠修正ログ",attendances_edit_one_month_user_path(@user, @attendance),class: "btn btn-primary" %>
</div>
<div>
  <table class="table table-bordered table-condensed table-hover" id="table-attendances">
    <thead>
      <tr>
        <th rowspan="3">残業申請</th>
        <th rowspan="3">日付</th>
        <th rowspan="3">曜日</th>
        <th rowspan="3">出勤・退社登録</th>
        <th colspan="6">実績</th> 
        <th colspan="5">所定外勤務</th>
      </tr>

      <tr>
        <th colspan="2">出社</th>
        <th colspan="2">退社</th>
        <th rowspan="2">在社時間</th>
        <th rowspan="2">備考</th>
        <th colspan="2">終了予定時間</th>
        <th rowspan="2">時間外時間</th> 
        <th rowspan="2">業務処理内容</th> 
        <th rowspan="2">指示者確認㊞</th>
      </tr>
        
      <tr>
        <th>時</th>
        <th>分</th>
        <th>時</th>
        <th>分</th>
        <th>時</th>
        <th>分</th>
      </tr>
    </thead>
    
    <tbody>
      <% @attendances.each do |day| %>
        <tr>
          <td>
            <a href="#" class="btn btn-primary" data-toggle="modal" data-target="#overtimeModal" data-id="<%= day.id %>" data-date="<%= l(day.worked_on, format: :short) %>" data-row-id="<%= day.id %>">残業申請</a>
          </td> 
          <td><%= l(day.worked_on, format: :short) %></td>
          <td class="<%= weekday_classes(day.worked_on.wday) %>"><%= $days_of_the_week[day.worked_on.wday] %></td>
          <td>
            <% if btn_text = attendance_state(day) %>
              <%= link_to "#{btn_text}登録", user_attendance_path(@user, day), method: :patch, class: "btn btn-primary btn-attendance" %>
            <% end %>
          </td>
          <td><%= day.started_at&.hour %></td>
          <td><%= day.started_at&.min %></td>
          <td><%= day.finished_at&.hour %></td>
          <td><%= day.finished_at&.min %></td>
          <td>
            <% if day.started_at.present? && day.finished_at.present? %>
              <%= str_times = working_times(day.started_at, day.finished_at) %>
              <% @total_working_times = @total_working_times.to_f + str_times.to_f %>
            <% end %>
          </td>
          <td><%= day.note %></td> <!-- 備考 -->
          <td></td> <!-- 終了予定時間 (時) -->
          <td></td> <!-- 終了予定時間 (分) -->
          <td></td> <!-- 時間外時間 -->
          <td></td> <!-- 業務処理内容 -->
          <td>
            <% if day.overtime_request_to == "上長A" %>
              上長Aに残業申請中
            <% elsif day.overtime_request_to == "上長B" %>
              上長Bに残業申請中
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <td colspan="3">累計日数</td>
        <td colspan="6">総合勤務時間</td>
        <td colspan="4">累計在社時間</td>
        <td rowspan="2" colspan="2">所属長承認:<br/>
          <select name="superior">
            <option>上長A</option>
            <option>上長B</option>
          </select>
          <button class="btn btn-primary">申請</button>
        </td>
      </tr>
      <tr>
        <td colspan="3"><%= @attendances.count %></td>
        <td colspan="6"><%= format_basic_info(@user.work_time).to_f * @worked_sum %></td>
        <td colspan="4"><%= @total_working_hours %></td>
      </tr>
    </tfoot>
  </table>
</div>
<!-- Modal -->
<div class="modal fade" id="overtimeModal" tabindex="-1" aria-labelledby="overtimeModalLabel" aria-hidden="true">
  <div class="modal-dialog" style="max-width: 90%; width: 70%; max-height: 80%; height: 70%;">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title text-center" id="overtimeModalLabel">【残業申請】</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <!-- ここから form_for を使用してフォームを開始 -->
        <%= form_for [@user, @attendance], url: update_overtime_user_attendance_path(@user, @attendance) do |f| %>
          <table class="table table-bordered table-condensed table-hover" id="table-attendances">
            <thead>
              <tr>
                <th>日付</th>
                <th>曜日</th>
                <th>終了予定時間</th>
                <th>翌日</th>
                <th>業務処理内容</th>
                <th>指示者確認㊞</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td id="modal_date"></td> 
                <td id="modal_day_of_week"></td>
                <!-- 以下で終了予定時間をf.time_selectを用いて選択できるように変更 -->
                <td><%= f.time_select :expected_finished_at, default: Time.current, minute_step: 15, required: true %></td>
                <!-- 翌日のチェックボックスをf.check_boxを用いて追加 -->
                <td><%= f.check_box :next_day %></td>
                <!-- 業務処理内容をf.text_areaを用いて追加 -->
                <td><%= f.text_area :work_details, class: "rounded-input" %></td>
                <!-- 指示者選択をf.selectを用いて選択できるように変更 -->
                <td><%= f.select :overtime_request_to, @supervisors.collect { |s| [s.name, s.id] }, prompt: "選択してください" %></td>
              </tr>
            </tbody>
          </table>
          <div class="modal-footer">
            <%= f.submit "変更を送信する", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>